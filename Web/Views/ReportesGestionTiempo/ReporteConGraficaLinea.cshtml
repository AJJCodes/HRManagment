<h5 class="card-title">Meses en Que mas Se solicta Vacaciones</h5>

<!-- Line Chart -->
<canvas id="lineChart" style="max-height: 400px;"></canvas>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Datos de ejemplo: meses y cantidad de solicitudes
        const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio'];
        const solicitudes = [65, 59, 80, 81, 56, 55, 40];

        // Crear el gráfico de línea
        new Chart(document.querySelector('#lineChart'), {
            type: 'line',
            data: {
                labels: meses,
                datasets: [{
                    label: 'Solicitudes de Vacaciones',
                    data: solicitudes,
                    fill: false,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
<!-- End Line CHart -->