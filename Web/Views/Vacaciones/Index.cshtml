﻿﻿
@{
    ViewBag.Title = "Solicitutes Vacaciones";
}


@* Estilo del error *@
<style>
    form .error {
        color: red;
    }

    input.error {
        border-color: red;
    }
</style>


<div id="DivSolicitatVacacionesEmpleados" class="card">
    <table id="TablaDeColavboradores" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
        <thead class="bg-light">
            <tr>
                <th>Codigo Colaborador</th>
                <th>Nombre Completo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Cant Dias</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>




<div id="DivAgregarSolicitudVacacion" style="display:none" class="container shadow-lg p-4">
    <form class="row" id="AgregarClienteyContratoForm">

        <p class="text-start my-3 fw-bold fs-4">Datos Cliente</p>

        <!-- Lado izquierdo -->

        <div class="col-6">
            <label for="NombreCliente" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="NombreCliente" name="NombreCliente">
            <div class="invalid-feedback"></div>
        </div>

        <div class="col">

            <div class="form-group">
                <label for="Apellido" class="form-label">Apellido:</label>
                <input type="text" name="Apellido" id="Apellido" class="form-control">
                <div class="invalid-feedback"></div>
            </div>

        </div>


        <div class="col-6">
            <label for="Cedula" class="form-label">Cedula:</label>
            <input type="text" class="form-control" id="Cedula" name="Cedula" remote="@Url.Action("ValidarCedula", "Clientes")">
            <div class="invalid-feedback"></div>
        </div>

        <div class="col-6">
            <label for="TelefonoCliente" class="form-label">Celular:</label>
            <input type="tel" class="form-control" id="TelefonoCliente" name="TelefonoCliente">
            <div class="invalid-feedback"></div>
        </div>

        <div class="col-6">
            <label for="Correo" class="form-label">Correo:</label>
            <input type="email" class="form-control" id="Correo" name="Correo">
            <div class="invalid-feedback"></div>
        </div>


        <div class=" p-4">
            <hr style="border: 2PX solid BLACK" />
        </div>


        <p class="text-start my-3 fw-bold fs-4">Datos de Contrato</p>


        <div class="col-6" style="margin-bottom: 20px;">
            <label for="Deposito" class="form-label">Deposito Inical:</label>
            <input type="number" class="form-control" id="Deposito" name="Deposito">
            <div class="invalid-feedback"></div>
        </div>

        <div class="col-6">
            <div class="">
                <label for="IdCargo" class="form-label">Cuarto:</label>
                <div class="dropdown">
                    <select class="selectpicker form-control" select data-live-search="true" data-live-search-style="startsWith" id="IdCuarto" name="IdCuarto" aria-label="Seleccionar">
                    </select>
                    <div class="invalid-feedback"></div>
                    <div class="dropdown-menu" aria-labelledby="IdCuarto">
                    </div>
                </div>
            </div>
        </div>


        <div class="col-6">
            <label for="FechaInicio" class="form-label">Fecha de Inicio de Contrato</label>
            <input type="date" name="FechaInicio" id="FechaInicio" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="w-100 form-control" />
        </div>

        <div class="col-6 mb-3">
            <label for="FechaFin" class="form-label">Fecha de Fin de Contrato</label>
            <input type="date" name="FechaFin" id="FechaFin" class="w-100 form-control" />
        </div>


        <div style="text-align: right; background-color: #D3CECE;" class="p-2">
            <button type="submit" class="btn btn-primary"><i class="las la-save"></i> Agregar</button>
            <button id="cancelButton" type="button" class="btn btn-danger"><i class="las la-undo"></i> Cancelar</button>
        </div>


    </form>
</div>

<div id="DivModificarClienteContrato" style="display:none" class="container shadow-lg p-4">
    @*Aqui se muestra el html de la de copia*@
</div>

@section scripts {
    @*     <script type="text/javascript" src="~/Scripts/JSvistas/Clientes/ValidacionesAgregar.js"></script> *@
    <script type="text/javascript" src="~/ScriptsJS/Contratacion//Colaboradores/Index.js"></script>
}